generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL") // Uncomment for development
}

// =============================================================================
// ROLES & PERMISSIONS
// =============================================================================

model Role {
  id          String   @id @default(cuid())
  name        String   @unique // "USER" or "ADMIN"
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users       User[]

  @@map("roles")
}

// =============================================================================
// USER MANAGEMENT
// =============================================================================

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  firstName String?
  lastName  String?
  isActive  Boolean  @default(true)
  roleId    String   // Foreign key to Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

   // Relations
  role      Role     @relation(fields: [roleId], references: [id])

  @@map("users")
}

